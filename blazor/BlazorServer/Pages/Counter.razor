@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-info mx-1" @onclick="IncrementCount">+@IncrementAmount</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount {get; set;} = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}

<!-- added by me -->
<button class="btn btn-warning mx-1" @onclick="DecrementCount">@DecrementAmount</button>

@code {

    [Parameter]
    public int DecrementAmount {get; set;} = -1;

    private void DecrementCount()
    {
        currentCount += DecrementAmount;
    }
}