@page "/todo"

<h3>Todo: </h3> 
<h6 class="mb-3">@todos.Count(todo => !todo.IsDone) items left to be completed</h6>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <!-- @todo.Title -->
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<input placeholder="Add something todo" @bind="newTodo" />
<button class="btn btn-info mx-1" @onclick="AddTodo">Add the todo</button>
<br /><br />
<h6 class="my-2">You have @todos.Count(todo => todo.IsDone) items already completed</h6>

@code {
    private List<TodoItem> todos = new();
    private string newTodo;

    private void AddTodo() {
        // Todo: Add the todo
        if(!string.IsNullOrWhiteSpace(newTodo)) {
            todos.Add(new TodoItem {Title = newTodo});
            newTodo = string.Empty;
        }
    }
}
