@page "/counter"

<h3>Counter</h3>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click Plus</button>

@code {
    private int currentCount = 0;
	
	[Parameter]
	public int IncrementAmount {get; set;} = 1;

    private void IncrementCount()
    {
		// currentCount++;
        currentCount += IncrementAmount;
    }
}


<!-- I added this to see the simplicity -->
<button class="btn btn-warning mx-2" @onclick="DecrementCount">Click Minus</button>

@code {

	[Parameter]
	public int DecrementAmount {get; set;} = -1;

    private void DecrementCount()
    {
        // currentCount--;
		currentCount += DecrementAmount;
    }
}